/* styles and media queries for screens smaller than 1024px */
@media (max-width: 1024px) {

  /* hides home button on smaller screen */
  .home-btn {
    display: none;
  }

  /* shrink input width */
  input {
    width: 90%;
    margin-left: 0;
  }

  /* aligns items in song card as left-hand columns */
  .song-card {
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  /* ensure bpm element spans full width with a left align and top margins */
  .song-bpm {
    width: 100%;
    text-align: left;
    margin-top: 10px;
  }

  /* adjust font and padding for mobile idea page */
  .message {
    font-size: 20px;
    padding-left: 20px;
    padding-right: 20px;
  }

  .message p {
    font-size: 18px;
    padding: 15px;
    width: 100%;
  }

  .meet-the-team {
    padding: 20px;
    margin: 30px auto;
    width: 95%;
  }

  /* resize picture */
  .temp_pic {
    padding-left: 10px;
    max-width: 80%;
  }
}

